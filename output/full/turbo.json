{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "public/**",
        "next.config.*",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ".env*",
        "src/**",
        "prisma/**",
        "next.config.*",
        "package.json"
      ],
      "persistent": true,
      "outputs": [
        ".next/**"
      ]
    },
    "lint": {
      "cache": true,
      "inputs": [
        "src/**",
        "*.config.*",
        "package.json"
      ],
      "outputs": []
    },
    "test": {
      "cache": true,
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**",
        "test/**",
        "*.config.*",
        "package.json"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "type-check": {
      "cache": true,
      "inputs": [
        "src/**",
        "*.config.*",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": []
    }
  },
  "ui": "tui"
}