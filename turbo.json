{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "cache": true,
      "inputs": [
        "src/**",
        "app/**",
        "public/**",
        "next.config.*",
        "package.json",
        "tsconfig.json"
      ],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "inputs": [
        ".env*",
        "src/**",
        "app/**",
        "prisma/**",
        "next.config.*",
        "package.json"
      ],
      "outputs": [".next/**"]
    },
    "lint": {
      "cache": true,
      "inputs": ["src/**", "*.config.*", "package.json"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["src/**", "test/**", "*.config.*", "package.json"]
    },
    "type-check": {
      "cache": true,
      "inputs": ["src/**", "*.config.*", "package.json", "tsconfig.json"],
      "outputs": []
    }
  }
}
