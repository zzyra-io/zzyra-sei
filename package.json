{
  "name": "zyra",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "pnpm": {
    "overrides": {
      "jose": ">=4.15.5",
      "multer": ">=2.0.1",
      "tar-fs": ">=3.0.9",
      "fastify": ">=4.29.1"
    }
  },
  "devDependencies": {
    "turbo": "^2.5.3",
    "zod": "^3.22.2"
  },
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "dev:ui": "turbo run dev --filter zyra-web3-automation",
    "dev:worker": "turbo run dev --filter zyra-worker",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -exec rm -rf '{}' + && find . -name '.next' -exec rm -rf '{}' + && find . -name '.turbo' -exec rm -rf '{}' +"
  }
}
